int main()
{
    int a = 6;
    int b = 9;
    printf("%d",soma(a,b));
    printf("\n%d,%d",a,b);
    trocar(&a,&b);
    printf("\n%d,%d",a,b);
    int valores[] = {10, 50, 30, 40, 20};
    printf("\n%d",media(valores,5));
    printf("\n%d",maximo(valores,5));

    char minhaString[] = "Ola, Mundo!";
    inverter(minhaString);


    return 0;
}
