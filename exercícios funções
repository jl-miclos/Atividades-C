#include <stdio.h>


//exercicios função

//1
int soma(int a,int b){
    int s = a + b;
    return s;
}

//2
void trocar(int *a,int *b){
    int m;
    m = *a;
    *a = *b;
    *b = m;
}

// 3
int media(int vetor[],int l){
    int m = 0;
    for (int i=0; i < l; i++){
        // printf("\n%d",vetor[i]);
        m += vetor[i];
        // printf("\n%d",m);
    }
    return m/l;
}
// 4
int maximo(int vetor[],int l){
    int t = 0;
    for (int i=0; i < l; i++){
        if (t<= vetor[i]){
            t = vetor[i];
        }
    }
    return t;
}

